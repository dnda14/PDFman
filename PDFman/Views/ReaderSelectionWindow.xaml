<Window x:Class="PDFman.Views.ReaderSelectionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Seleccionar Lector PDF" 
        Height="400" Width="500"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="#F8F9FA"
        FontFamily="Segoe UI">

    <Window.Resources>
        <!-- Usar los mismos estilos que MainWindow -->
        <Style x:Key="ModernButton" TargetType="Button">
            <Setter Property="Background" Value="#007ACC"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="Margin" Value="4"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="6" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="{TemplateBinding BorderThickness}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#005F9E"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#004578"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="SecondaryButton" TargetType="Button" BasedOn="{StaticResource ModernButton}">
            <Setter Property="Background" Value="#6C757D"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#5A6268"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#495057"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="ReaderCard" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#E0E0E0"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Padding" Value="15"/>
            <Setter Property="Margin" Value="0,5"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#F8F9FA"/>
                    <Setter Property="BorderBrush" Value="#007ACC"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#2C3E50" Padding="20,15">
            <StackPanel>
                <TextBlock Text="📖 Seleccionar Lector PDF" 
                          FontSize="18" 
                          FontWeight="Bold" 
                          Foreground="White" 
                          HorizontalAlignment="Center"/>
                <TextBlock Text="{Binding PdfFileName, StringFormat='Para: {0}'}" 
                          FontSize="12" 
                          Foreground="#BDC3C7" 
                          HorizontalAlignment="Center" 
                          Margin="0,5,0,0"/>
            </StackPanel>
        </Border>

        <!-- Lista de lectores -->
        <ScrollViewer Grid.Row="1" Margin="20" VerticalScrollBarVisibility="Auto">
            <ItemsControl ItemsSource="{Binding AvailableReaders}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border Style="{StaticResource ReaderCard}" 
                               MouseLeftButtonUp="ReaderCard_Click"
                               Tag="{Binding}">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <!-- Radio button -->
                                <RadioButton Grid.Column="0" 
                                           GroupName="ReaderSelection"
                                           IsChecked="{Binding IsSelected, RelativeSource={RelativeSource AncestorType=Border}}"
                                           VerticalAlignment="Center" 
                                           Margin="0,0,15,0"/>

                                <!-- Información del lector -->
                                <StackPanel Grid.Column="1">
                                    <TextBlock Text="{Binding Name}" 
                                              FontSize="16" 
                                              FontWeight="SemiBold"/>
                                    <TextBlock Text="{Binding ExecutablePath}" 
                                              FontSize="11" 
                                              Foreground="#666" 
                                              TextTrimming="CharacterEllipsis"/>
                                </StackPanel>

                                <!-- Indicador de predeterminado -->
                                <Border Grid.Column="2" 
                                       Background="#28A745" 
                                       CornerRadius="12" 
                                       Padding="8,4"
                                       Visibility="{Binding IsDefault, Converter={StaticResource BooleanToVisibilityConverter}}">
                                    <TextBlock Text="Predeterminado" 
                                              Foreground="White" 
                                              FontSize="10" 
                                              FontWeight="Bold"/>
                                </Border>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>

        <!-- Opción de recordar elección -->
        <Border Grid.Row="2" Background="White" Padding="20,15" Margin="20,0" CornerRadius="8" BorderBrush="#E0E0E0" BorderThickness="1">
            <CheckBox IsChecked="{Binding RememberChoice}" 
                     Content="💾 Recordar esta elección para este archivo" 
                     FontSize="13"/>
        </Border>

        <!-- Botones -->
        <StackPanel Grid.Row="3" 
                   Orientation="Horizontal" 
                   HorizontalAlignment="Right" 
                   Margin="20,20,20,20">
            <Button Content="✅ Abrir con este lector" 
                   Command="{Binding SelectReaderCommand}"
                   Style="{StaticResource ModernButton}"
                   Click="SelectButton_Click"
                   IsDefault="True"
                   MinWidth="150"/>
            <Button Content="❌ Cancelar" 
                   Command="{Binding CancelCommand}"
                   Style="{StaticResource SecondaryButton}"
                   Click="CancelButton_Click"
                   IsCancel="True"
                   MinWidth="100"/>
        </StackPanel>
    </Grid>
</Window>